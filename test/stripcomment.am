all-local: test

test: stripcomment

stripcomment: %: $(top_srcdir)/tools/%
	@echo $(ECHO_N) "Testing $@ with Makefile...            "
	@./$< -m $@/makefile > /tmp/$@_out
	@if diff $@/makefile.stripped /tmp/$@_out > /dev/null; then echo "Ok"; else echo "No"; fi
	@echo $(ECHO_N) "Testing $@ with C...                   "
	@./$< -c $@/prog.c > /tmp/$@_out
	@if diff $@/prog.c.stripped /tmp/$@_out > /dev/null; then echo "Ok"; else echo "No"; fi

$(top_srcdir)/tools/stripcomment:
	cd $(@D) && make $(@F)
